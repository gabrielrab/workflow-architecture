{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "outDir": "./build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "core/*": ["./src/core/*"],
      "pipelines/*": ["./src/pipelines/*"],
      "steps/*": ["./src/steps/*"],
      "workflows/*": ["./src/workflows/*"]
    },
    "typeRoots": ["./src/types"]
  },
  "include": ["src/**/*.ts", "./index.ts"],
  "exclude": ["node_modules"]
}
